{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "hostRules": [
    {
      "hostType": "docker",
      "abortOnError": false
    }
  ],
  "labels": ["dependencies"],
  "dependencyDashboard": "true",
  "argocd": {
    "fileMatch": ["argo-cd/.+\\.yaml$"]
  },
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    // "docker:disable", // To prevent upgrading docker image tag in helm values.yaml
    ":automergePatch"
  ],
  "automerge": true,
  // "schedule": ["after 9am on monday", "before 12am on monday"],
  "ignorePaths": [
    "argo-cd/base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
